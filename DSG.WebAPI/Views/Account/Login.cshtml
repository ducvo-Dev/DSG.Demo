
@model DSG.WebAPI.Models.LoginViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Login";

}
<div class="account_grid row">
    <div class="login-box">
        <h3>Đăng nhập</h3>
        @using (Html.BeginForm("Login", "Account", new { returnUrl = @ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(false, "", new { @class = "error" })
            <div>
                <span>Tài khoản<label>*</label></span>
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })

            </div>
            <div>
                <span>Password<label>*</label></span>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })

            </div>
            <div>
                @Html.CheckBoxFor(m => m.RememberMe)

                Nhớ mật khẩu?
            </div>
            <a class="forgot" href="#">Forgot Your Password?</a>
            <input type="submit" value="Login" class="btn btn-default" />
        }

        @Html.Partial("_ExternalLoginsListPartial", new DSG.WebAPI.Models.ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })

    </div>
    <div class="">
        <h3>Chưa có tài khoản</h3>
        <p>Nếu bạn chưa có tài khoản vui lòng đăng ký tại link dưới đây:</p>
        @Html.ActionLink("Đăng ký thành viên", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "acount-btn" })
        @*<li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>*@
      
    </div>
    <div class="clearfix"> </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
